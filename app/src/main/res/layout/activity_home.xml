<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Home">
s
    <TextView
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:layout_margin="30dp"
        android:text="@string/myapp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_maxima_pessoas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Cliente"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_maxima_pedido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Pedidos"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_maxima_resumo_vendas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Resumo de vendas"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_maxima_ferramentas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Ferramentas"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="v.1.0.0"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_maxima_nuvem_conectado"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_maxima_nuvem_desconectado"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>